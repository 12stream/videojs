            diffTime -= 1000
            if(diffTime > 0) {
                //d天，h小时,m分,s秒
                var d = Math.floor(diffTime/3600000/24), h = Math.floor(diffTime/3600000), m = Math.floor((diffTime - (h*3600000))/60000), 
